# in ~/.gitconfig:
# [user]
#   name =
#   email =
#   signingkey =

[core]
  editor = code --wait --new-window
  autocrlf = false
  eol = lf

[merge]
  tool = vscode
[mergetool "vscode"]
  cmd = code --wait --new-window $MERGED

[diff]
  tool = vscode
[difftool "vscode"]
  cmd = code --wait --new-window --diff $LOCAL $REMOTE

[commit]
  template = ~/.config/git/message
  gpgSign = true
  verbose = true

[alias]
  graph = log --graph --all --decorate --stat --date=iso
  changelog = log --oneline
  recent = for-each-ref --count=10 --sort=-committerdate refs/heads/ --format="%(refname:short)"
  please = push --force-with-lease
  fast = commit --all --no-verify --no-gpg-sign --message
  conflicts = diff --name-only --diff-filter=U
  go = "!f() { git checkout $1 2> /dev/null || git checkout -b $1; }; f"

  # Just for fun
  praise = blame
  nope = reset HEAD
  fuck = reset HEAD --hard

[push]
  default = simple
  followTags = true

[status]
  showUntrackedFiles = all
  short = true
  branch = true

[transfer]
  fsckobjects = true

[branch]
  autosetupmerge = always

[credential]
  helper = /usr/share/git/credential/gnome-keyring/git-credential-gnome-keyring
