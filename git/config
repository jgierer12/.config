# in ~/.gitconfig:
# [user]
#   name =
#   email =
#   signingkey =

[core]
  editor = code --wait --new-window
  autocrlf = false
  eol = lf

[merge]
  tool = vscode
[mergetool "vscode"]
  cmd = code --wait --new-window $MERGED

[diff]
  tool = vscode
[difftool "vscode"]
  cmd = code --wait --new-window --diff $LOCAL $REMOTE

[commit]
  template = ~/.config/git/message
  gpgSign = true
  verbose = true

[alias]
  graph = log --graph --all --decorate --stat --date=iso

  changelog = log --oneline --no-merges
  local = changelog "@{u}"..
  upstream = changelog .."@{u}"

  recent = for-each-ref --count=10 --sort=-committerdate refs/heads/ --format="%(refname:short)"
  praise = blame
  please = push --force-with-lease
  amend = commit --amend --no-edit

  fast = commit -am fastcommit

  nope = reset HEAD
  fuck = reset HEAD --hard

  master = checkout master

  conflicts = diff --name-only --diff-filter=U

  f = fast
  c = commit
  cm = commit --message
  ca = commit --amend
  cam = commit --amend --message
  caa = amend
  s = status
  d = diff
  dt = difftool
  co = checkout
  ma = master
  m = merge
  l = changelog
  ll = local
  lu = upstream
  ps = push
  fe = fetch
  pl = pull
  rs = reset
  rb = rebase

[push]
  default = simple
  followTags = true

[status]
  showUntrackedFiles = all
  short = true

[transfer]
  fsckobjects = true

[branch]
  autosetupmerge = always

[credential]
  helper = /usr/share/git/credential/gnome-keyring/git-credential-gnome-keyring
