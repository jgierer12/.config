# in ~/.gitconfig:
# [user]
#   name =
#   email =
#   signingkey =

[core]
  editor = code --wait --new-window
  autocrlf = false
  eol = lf

[merge]
  tool = vscode
[mergetool "vscode"]
  cmd = code --wait --new-window $MERGED

[diff]
  tool = vscode
[difftool "vscode"]
  cmd = code --wait --new-window --diff $LOCAL $REMOTE

[commit]
  template = ~/.config/git/message
  gpgSign = true
  verbose = true

[alias]
  graph = log --graph --all --decorate --stat --date=iso

  changelog = log --oneline --no-merges
  local = "!git changelog \"@{u}\".."
  upstream = "!git changelog ..\"@{u}\""

  recent = for-each-ref --count=10 --sort=-committerdate refs/heads/ --format="%(refname:short)"
  praise = blame
  please = push --force-with-lease
  amend = commit --amend -C HEAD

  fast = commit -am fastcommit
  fup = !git fast && git push

  nope = reset HEAD
  fuck = reset HEAD --hard

  master = checkout master

  conflicts = diff --name-only --diff-filter=U

[push]
  default = simple
  followTags = true

[status]
  showUntrackedFiles = all
  short = true

[transfer]
  fsckobjects = true

[branch]
  autosetupmerge = always

[credential]
  helper = /usr/share/git/credential/gnome-keyring/git-credential-gnome-keyring
