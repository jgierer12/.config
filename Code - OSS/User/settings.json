{
  // Visuals
  "editor.fontFamily": "'Dank Mono', monospace",
  "editor.fontSize": 20,
  "editor.fontLigatures": true,
  "terminal.integrated.fontFamily": "'Dank Mono', monospace",
  "terminal.integrated.fontSize": 18,
  "workbench.colorTheme": "Monokai Pro",
  "workbench.iconTheme": "Monokai Pro Monochrome Icons",
  "monokaiPro.fileIconsMonochrome": true,
  "workbench.sideBar.location": "right",
  "window.menuBarVisibility": "toggle",
  "workbench.panel.defaultLocation": "right", // Terminal
  "editor.smoothScrolling": true,
  "editor.cursorBlinking": "phase",
  "editor.cursorSmoothCaretAnimation": true,
  "editor.matchBrackets": false,
  "bracket-pair-colorizer-2.highlightActiveScope": true,

  // Disable features
  "window.zoomLevel": 0,
  "workbench.startupEditor": "none",
  "window.restoreWindows": "none",
  "explorer.openEditors.visible": 0,
  "workbench.editor.showTabs": false,
  "editor.renderLineHighlight": "gutter",
  "editor.minimap.enabled": false,
  "editor.renderIndentGuides": false,
  "editor.dragAndDrop": false,
  "editor.suggestSelection": "first",
  "vsintellicode.modify.editor.suggestSelection": "disabled",

  // Enable features
  "editor.rulers": [80],
  "breadcrumbs.enabled": true,
  "editor.renderWhitespace": "boundary",
  "extensions.autoUpdate": true,
  "editor.autoIndent": true,
  "editor.lineNumbers": "relative",

  // Git
  "git.autofetch": true,
  "git.enableCommitSigning": true,
  "editor.acceptSuggestionOnEnter": "off",

  // Formatting
  "editor.tabSize": 2,
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  "html.format.enable": false,
  "javascript.format.enable": false,
  "typescript.format.enable": false,
  "json.format.enable": true,
  "eslint.autoFixOnSave": true,
  "eslint.options": {
    "ignorePath": ".gitignore"
  },
  "prettier.ignorePath": ".gitignore",

  // Languages
  "files.associations": {
    "*.css": "postcss"
  },
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],

  // Vim
  "vim.visualstar": true,
  "vim.hlsearch": true,
  "vim.leader": "<space>",
  "vim.normalModeKeyBindings": [
    {
      "before": ["<leader>", "w", "w"],
      "commands": ["workbench.action.files.save"]
    },
    {
      "before": ["<leader>", "q", "q"],
      "commands": ["workbench.action.closeWindow"]
    },
    {
      "before": ["<leader>", "w", "q"],
      "commands": [
        "workbench.action.files.save",
        "workbench.action.closeWindow"
      ]
    },
    {
      "before": ["<C-h>"],
      "commands": ["workbench.action.focusLeftGroup"]
    },
    {
      "before": ["<C-j>"],
      "commands": ["workbench.action.focusAboveGroup"]
    },
    {
      "before": ["<C-k>"],
      "commands": ["workbench.action.focusBelowGroup"]
    },
    {
      "before": ["<C-l>"],
      "commands": ["workbench.action.focusRightGroup"]
    },
    {
      "before": ["<C-w>"],
      "commands": ["workbench.action.editorLayoutSingle"]
    },
    {
      "before": ["<leader>", "/"],
      "commands": [":noh"]
    },
    {
      "before": ["<leader>", "\""],
      "commands": [":reg"]
    }
  ],
  "vim.handleKeys": {
    "<C-b>": false // Toggle sidebar
  },
  "css.validate": false,
  "postcss.validate": false,
  "latex-workshop.view.pdf.viewer": "tab",
  "latex-workshop.latex.autoClean.run": "onBuilt",
  "editor.formatOnSave": true
}
